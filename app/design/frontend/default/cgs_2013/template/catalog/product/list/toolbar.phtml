/**
 * Product list toolbar
 *
 * @see Mage_Catalog_Block_Product_List_Toolbar
 */
 foreach( $this->getAvailableLimit() as $_key => $_limit ) {
    if($this->isLimitCurrent($_key)) {
        $activeLimit = $_key;
    }
 }
?>
<?php if($this->getCollection()->getSize()): ?>
<div class="cgs-catalog-category-toolbar navbar navbar-inverse">
  <ul class='nav navbar-nav'>
    <li>
      <a href='#' onclick='return false;'>
      <?php if($this->getLastPageNum() > 1): ?>
        <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
      <?php else: ?>
        <?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?>
      <?php endif; ?>
      </a>
    </li>
    <li class='dropdown'>
      <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
        Show <?php echo $activeLimit ?> Per Page <span class='caret'></span>
      </a>
      <ul class='dropdown-menu'>
        <?php foreach( $this->getAvailableLimit() as $_key => $_limit ): ?>
          <li<?php if($this->isLimitCurrent($_key)): ?> class='active'<?php endif; ?>>
            <a href='<?php echo $this->getLimitUrl($_key)  ?>'><?php echo $_limit ?></a>
          </li>
        <?php endforeach; ?>
      </ul>
    </li>
  </ul>
  <ul class='nav navbar-nav pull-right'>
    <li class='dropdown pull-right'>
      <a href='#' class='dropdown-toggle' data-toggle='dropdown'>
        <?php echo $this->__('Sort By') ?> <span class='caret'></span>
      </a>
      <ul class='dropdown-menu'>
        <?php foreach($this->getAvailableOrders() as $_key=>$_order): ?>
        <li <?php if($this->isOrderCurrent($_key)): ?>class='active'<?php endif; ?>>
          <a href='<?php echo $this->getOrderUrl($_key, 'asc') ?>'>
            <?php echo $this->__($_order) ?>
          </a>
        </li>
        <?php endforeach; ?>
      </ul>
    </li>
    <li>
      <?php if($this->getCurrentDirection() == 'desc'): ?>
          <a class='btn-lg' href="<?php echo $this->getOrderUrl(null, 'asc') ?>" title="<?php echo $this->__('Set Ascending Direction') ?>"><span class='glyphicon glyphicon-sort-by-alphabet'></span></a>
      <?php else: ?>
          <a class='btn-lg' href="<?php echo $this->getOrderUrl(null, 'desc') ?>" title="<?php echo $this->__('Set Descending Direction') ?>"><span class='glyphicon glyphicon-sort-by-alphabet-alt'></span></a>
      <?php endif; ?>
    </li>
  </ul>
</div>

<?php echo $this->getPagerHtml() ?>

<?php endif; ?>