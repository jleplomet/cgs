<?xml version="1.0"?>
<layout version="0.1.0">
  <default>
    <reference name="footer_links">
        <!-- Add custom links. Pretty self-explanatory.
        Dig into app/code/core/Mage/Page/Block/Template/Links.php for more info -->
        <action method="addLink" translate="label title">
            <label>About Us</label>
            <url>aboutus</url>  <!-- can use a full url if not using urlParams below -->
            <title>About Us</title>
            <prepare>true</prepare> <!-- set true if adding base url param -->
            <urlParams helper="core/url/getHomeUrl"/>
            <position>1</position>
        </action>

        <action method="addLink" translate="label title">
            <label>Terms Of Service</label>
            <url>termsofservice</url>  <!-- can use a full url if not using urlParams below -->
            <title>Terms Of Service</title>
            <prepare>true</prepare> <!-- set true if adding base url param -->
            <urlParams helper="core/url/getHomeUrl"/>
            <position>2</position>
        </action>

        <action method="addLink" translate="label title">
            <label>Privacy Policy</label>
            <url>privacypolicy</url>  <!-- can use a full url if not using urlParams below -->
            <title>Privacy Policy</title>
            <prepare>true</prepare> <!-- set true if adding base url param -->
            <urlParams helper="core/url/getHomeUrl"/>
            <position>3</position>
        </action>
    </reference>
  </default>
</layout>